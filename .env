# Database
DB_USER=griote
DB_PASSWORD=your_secure_db_password
DB_NAME=griote

# MinIO
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# Grafana
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password
# Generate with: htpasswd -nb username password
GRAFANA_BASIC_AUTH=username:$hashed_password

# Prometheus
# Generate with: htpasswd -nb username password
PROMETHEUS_BASIC_AUTH=username:$hashed_password

# Backend secrets (add to backend/.env.prod)
JWT_SECRET=your_jwt_secret
MAIL_HOST=your_mail_host
MAIL_PORT=587
MAIL_USER=your_mail_user
MAIL_PASS=your_mail_pass
MAIL_SECURE=true
EMAIL_FROM=noreply@griote.org